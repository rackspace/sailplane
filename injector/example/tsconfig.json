{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDirs": ["src"],
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017"]
  }
}
