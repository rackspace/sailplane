{
  "name": "@sailplane/workspace",
  "version": "1.0.0",
  "private": true,
  "description": "AWS Serverless Node.js Utilities in Javascript and Typescript",
  "author": "Rackspace Technology",
  "workspaces": [
    "logger",
    "aws-https",
    "elasticsearch-client",
    "expiring-value",
    "injector",
    "lambda-utils",
    "state-storage"
  ],
  "engines": {
    "node": ">=20.11.0 <21",
    "npm": ">=10.3.0 <11"
  },
  "scripts": {
    "analyze": "npm run analyze -ws",
    "build": "npm run build -ws",
    "clean": "npm run clean -ws && rm -rf tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && find . -name node_modules -maxdepth 2 -type d -exec rm -rf {} +",
    "test": "npm run test -ws",
    "prettier": "prettier --check . --ignore-path .prettierignore",
    "lint": "npm run lint --ws"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "5.5.x",
    "typescript-eslint": "^8.21.0"
  },
  "prettier": {
    "printWidth": 100
  }
}
